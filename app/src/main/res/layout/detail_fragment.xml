<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModell"
            type="com.example.weather_test.detail.DetailViewModel" />
    </data>

<LinearLayout

android:layout_height="match_parent"
android:layout_width="match_parent"
android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <TextView
            android:id="@+id/detail_one_date"
            android:layout_width="147dp"
            android:layout_height="0dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="151dp"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:text="@{viewModell.selectedProperty.dt_txt}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.677"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sunday, Julay, 3" />

        <TextView
            android:id="@+id/detail_one_maxtemp"
            style="@style/TextAppearance.Maxtemp"
            android:layout_width="77dp"
            android:layout_height="65dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="28dp"
            android:text="@{String.valueOf(viewModell.selectedProperty.main.temp_max)}"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/detail_one_maintemp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/detail_one_date"
            app:layout_constraintVertical_bias="1.0"
            tools:text="16" />

        <TextView
            android:id="@+id/detail_one_description"
            android:layout_width="55dp"
            android:layout_height="31dp"
            android:layout_marginBottom="76dp"
            android:textColor="@color/gray"
            style="@style/TextAppearance.Description"
            android:text="@{String.valueOf(viewModell.selectedProperty.weather[0].description)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/detail_one_maintemp"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Rain" />

        <TextView
            android:id="@+id/detail_one_maintemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:textColor="@color/gray"
            android:text="@{String.valueOf(viewModell.selectedProperty.main.temp_min)}"
            style="@style/TextAppearance.Maintemp"
            app:layout_constraintBaseline_toBaselineOf="@+id/detail_one_description"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="12" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="78dp"
            android:layout_height="69dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/detail_one_description"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_one_date"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/art_rain" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal"
    android:layout_gravity="center">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/gray"
            android:text="Humidity" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:textSize="35sp"
            android:text="@{String.valueOf(viewModell.selectedProperty.main.humidity)}"
            android:textColor="@color/white"
            tools:text="90 %" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/gray"
            android:text="Pressure" />

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:textSize="35sp"
            android:text="@{String.valueOf(viewModell.selectedProperty.main.pressure)}"
            android:textColor="@color/white"
            tools:text="996phPa" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/gray"
            android:text="wind" />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="@{String.valueOf(viewModell.selectedProperty.wind.speed)}"
            android:textSize="35sp"
            android:textColor="@color/white"
            tools:text="8 Km/hE" />
    </TableRow>
</TableLayout>
</LinearLayout>
</layout>

